cc=cl.exe
cflags=/c /utf-8 /F10000000 /nologo /W4 /MD /O2 /Iinclude /I. /Foobj\\

incray=/DRAYLIB /I.\raylib\include
raylib=/LIBPATH:.\raylib\lib raylib.lib
link=link
lflags=/NOLOGO /SUBSYSTEM:console /ENTRY:mainCRTStartup

all: Example.exe

Clock.obj:
	$(cc) $(cflags) src/$*.c

Input.obj:
	$(cc) $(cflags) src/$*.c

Zenibou.obj:
	$(cc) $(cflags) src/$*.c

Zenibou:
	$(cc) $(cflags) src/Zenibou.c

rayZenibou:
	$(cc) $(incray) $(cflags) src/Zenibou.c

Example:
	$(cc) $(cflags) Example.c

Example.exe: Example Clock.obj Input.obj Zenibou
	$(link) $(lflags) obj/Example.obj obj/Clock.obj obj/Input.obj obj/Zenibou.obj

clean:
	del obj\*.obj
	del Example.exe

raygame:
	$(cc) $(cflags) Example.c

ray: raygame Clock.obj Input.obj rayZenibou
	$(link) $(lflags) $(raylib) obj/Example.obj obj/Zenibou.obj obj/Clock.obj obj/Input.obj

