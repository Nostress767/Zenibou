cc=cl.exe
cflags=/c /utf-8 /F10000000 /nologo /W4 /MD /O2

incray=/DRAYLIB /I.\raylib\include
raylib=/LIBPATH:.\raylib\lib raylib.lib
link=link
lflags=/NOLOGO /SUBSYSTEM:console /ENTRY:mainCRTStartup

all: Example.exe

Clock.obj:
	$(cc) $(cflags) $*.c

Input.obj:
	$(cc) $(cflags) $*.c

Zenibou.obj:
	$(cc) $(cflags) $*.c

Zenibou:
	$(cc) $(cflags) Zenibou.c

rayZenibou:
	$(cc) $(incray) $(cflags) Zenibou.c

Example:
	$(cc) $(cflags) Example.c

Example.exe: Example Clock.obj Input.obj Zenibou
	$(link) $(lflags) Example.obj Clock.obj Input.obj Zenibou.obj

clean: cleanbuild all

raygame:
	$(cc) $(cflags) Example.c

ray: raygame Clock.obj Input.obj rayZenibou
	$(link) $(lflags) $(raylib) Example.obj Zenibou.obj Clock.obj Input.obj

cleanbuild:
	del *.obj
